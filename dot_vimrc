" .vimrc

" vim is not vi
set nocompatible

" tabs and indentation
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smarttab
set autoindent

" behaviour
set backspace=indent,eol,start
set mouse=a
"set term=xterm-256color
set modelines=0
"set textwidth=79
set hidden

" appearance
set encoding=utf-8
set termencoding=utf-8
set wildmenu
set title
set showcmd
set showmode
set visualbell
set nofoldenable
set ruler
set number
set clipboard+=unnamed

" searching
set hlsearch
set incsearch
set showmatch
set smartcase
set ignorecase

" keybindings for working with tabs
nnoremap th  :tabfirst<CR>
nnoremap tj  :tabnext<CR>
nnoremap tk  :tabprev<CR>
nnoremap tl  :tablast<CR>
nnoremap tt  :tabedit<Space>
nnoremap tn  :tabnext<Space>
nnoremap tm  :tabm<Space>
nnoremap td  :tabclose<CR>

" splits behaviour
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
set splitbelow
set splitright

nnoremap <F8> :bnext<CR>
nnoremap <F7> :bprevious<CR>


